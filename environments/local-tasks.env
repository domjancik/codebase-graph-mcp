# Task-Focused Local Environment Configuration
# Focused on task management and documentation

# Use preset mode with tasks preset
MCP_FILTER_MODE=preset
MCP_COMMAND_PRESET=tasks

# Allow additional relationship creation for linking tasks
MCP_ALLOWED_COMMANDS=create_relationship

# Block administrative operations
MCP_BLOCKED_GROUPS=admin,bulk

# Enable moderate debugging
MCP_DEBUG_FILTERING=false

# Warn about unknown fields
MCP_WARN_UNKNOWN_FIELDS=true
MCP_STRICT_MODE=false

# Validate configuration
MCP_VALIDATE_CONFIG=true
