# Custom Whitelist Local Environment Configuration
# Template for creating custom command restrictions

# Use whitelist mode for explicit control
MCP_FILTER_MODE=whitelist

# Allow specific command groups (customize as needed)
MCP_ALLOWED_GROUPS=read,comments,docs

# Allow specific individual commands (customize as needed)
MCP_ALLOWED_COMMANDS=create_task,update_task_status,create_relationship

# Block specific groups if needed
MCP_BLOCKED_GROUPS=admin

# Block specific commands if needed
MCP_BLOCKED_COMMANDS=delete_component,restore_snapshot

# Enable debugging to see what's being filtered
MCP_DEBUG_FILTERING=true

# Warn about unknown fields
MCP_WARN_UNKNOWN_FIELDS=true
MCP_STRICT_MODE=false

# Validate configuration
MCP_VALIDATE_CONFIG=true
