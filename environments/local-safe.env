# Safe Local Environment Configuration
# Read-only access for analysis and documentation

# Use preset mode with read-only preset
MCP_FILTER_MODE=preset
MCP_COMMAND_PRESET=read-only

# Allow additional commenting for documentation
MCP_ALLOWED_COMMANDS=create_node_comment,update_comment

# Enable debugging for transparency
MCP_DEBUG_FILTERING=true

# Warn about unknown fields
MCP_WARN_UNKNOWN_FIELDS=true
MCP_STRICT_MODE=false

# Validate configuration
MCP_VALIDATE_CONFIG=true
