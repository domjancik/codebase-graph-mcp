# Modeling-Focused Local Environment Configuration  
# For architecture and component modeling work

# Use preset mode with modeling preset
MCP_FILTER_MODE=preset
MCP_COMMAND_PRESET=modeling

# Allow bulk operations for efficient modeling
MCP_ALLOWED_GROUPS=bulk

# Block task management to focus on components
MCP_BLOCKED_GROUPS=tasks,admin

# Enable debugging for understanding relationships
MCP_DEBUG_FILTERING=true

# Warn about unknown fields
MCP_WARN_UNKNOWN_FIELDS=true
MCP_STRICT_MODE=false

# Validate configuration
MCP_VALIDATE_CONFIG=true
